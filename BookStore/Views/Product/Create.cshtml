@model BookStore.BusnessLogic.ViewsModels.Product.CreateProduct

@{
    ViewData["Title"] = "Create Product";
}

<div asp-validation-summary="All"></div>
<form asp-action="Create" asp-controller="Product" asp-route-id="Model.Id" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Name" class="form-label mt-4"></label>
                    <input class="form-control" asp-for="Name" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label mt-4"></label>
                    <input class="form-control" asp-for="Description" placeholder="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author" class="form-label mt-4"></label>
                    <input class="form-control" asp-for="Author" placeholder="Author">
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label mt-4"></label>
                        <input class="form-control" asp-for="Price" placeholder="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LastPrice" class="form-label mt-4"></label>
                        <input class="form-control" asp-for="LastPrice" placeholder="LastPrice">
                        <span asp-validation-for="LastPrice" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group">
                    <label asp-for="CategoryId" class="form-label mt-4"></label>
                    <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories">
                        <option></option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>


                <fieldset class="mt-2">
                    
                    <div class="form-check">
                        <input class="form-check-input" asp-for="active" type="radio" name="optionsRadios" id="optionsRadios1" value="Active" checked="">
                        <label class="form-check-label" asp-for="active">
                            Option one 
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" asp-for="active" type="radio" name="optionsRadios" id="optionsRadios2" value="Not Activr">
                        <label class="form-check-label" asp-for="active">
                            Option two 
                        </label>
                    </div>
                    
                </fieldset>


                <div class="form-group">
                    <label asp-for="Image" class="form-label mt-4"></label>
                    <input type="file" class="form-control" asp-for="Image" />
                    <small class="form-text text-muted">Only AllowedExtensions files are allowed with max size.</small>
                    <span asp-validation-for="Image" class="text-danger d-block"></span>
                </div>


                <button type="submit" class="btn btn-primary m-2">Save</button>

                <button type="reset" class="btn btn-primary">Reset</button>
            </div>

        </div>

    </div>

</form>