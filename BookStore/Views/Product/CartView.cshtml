@using BookStore.BusnessLogic.ViewsModels.ShoppingCart
@model CartView
<link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<link href="~/sweetalert2/sweetalert2.css" rel="stylesheet" />
@* <form method="Post" asp-action="AddToCart" asp-controller="ShoppingCart" class="mt-2"> *@
    <input asp-for="Id"  value="@Model.Id" hidden />

    <div class="card container pt-4">
        <div class="card-header bg-primary text-light ml-0 row">
            <div class="col-12 col-md-6">
                <h1 class="text-white">@Model.Name</h1>
                <p class="text-warning">by @Model.Author</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-warning pt-2">@Model.Category</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-12 col-lg-8">
                        <div class="row pl-2">
                            <h5 class="text-muted pb-2">List Price: <strike>@Model.LastPrice.ToString("c")</strike></h5>
                        </div>
                        <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                            <div class="p-1 col-6 bg-secondary">
                                Price
                            </div>
                            <div class="p-1 col-6 bg-secondary">
                                @Model.Price.ToString("c")
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-4 text-center">
                    <img src="@($"/assets/images/products/{Model.imageUrl}")" class="rounded img-fluid" style="max-height: 400px;" />
                    @* <img src="/assets/images/products/5fd4a74f-0e79-40f6-ae95-f47d62a890b2.jpg" alt="Product Image">
 *@

                    </div>
                    <div class="col-12 col-lg-8 mt-3">
                        <div class="row pl-2">
                            <div class="col-2 text-primary"><h4>Count</h4></div>
                            <div class="col-10"><input asp-for="count" class="form-control" /></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-success form-control" style="height: 50px;">Home</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" id="submitBtn" value="Add to Cart" class="btn btn-primary form-control" style="height: 50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
@* </form> *@

@section Scripts{

    <script src="~/js/product/cartview.js"></script>
    <script src="~/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/sweetalert2/sweetalert2.all.js"></script>
    <script src="~/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/sweetalert2/sweetalert2.js"></script>
}
