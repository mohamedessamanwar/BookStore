@model List<BookStore.BusnessLogic.ViewsModels.Product.ProductView>

@{
    ViewData["Title"] = "Home Page";
}

<form class="d-flex m-3" asp-action="Index">
    <input id="searchInput" name="name" class="form-control me-sm-2" type="search" placeholder="Search">
    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
</form>

<div class="row mt-2" id="productContainer">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:2px solid black; border-radius: 1px; height:470px">
                    <div class="card" style="height:400px">
                        <img src="@($"/assets/images/products/{product.imageUrl}")" class="card-img-top rounded" style="height:400px" />

                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@product.Name</p>
                                <p class="card-title text-info">by <b>@product.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p>List Price: <strike><b>₺@product.LastPrice.ToString("0.00")</b></strike></p>
                            </div>
                            <div class="pl-1">
                                <p>As low as: <b>₺@product.Price.ToString("0.00")</b></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-controller="Product" asp-action="CartView" class="btn btn-primary form-control" asp-route-id="@product.Id">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


